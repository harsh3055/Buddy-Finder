<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All StudyHubs</h1>

    <% for (let studyhub of studyhubs){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(studyhub.images.length) {%>
                <img class="img-fluid" alt="" src="<%=studyhub.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/StudyWithMe/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= studyhub.title %> </h5>

                    <p class="card-text"><%= studyhub.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= studyhub.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/studyhubs/<%=studyhub._id%>">View <%=studyhub.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const studyhubs = { features: <%- JSON.stringify(studyhubs) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>